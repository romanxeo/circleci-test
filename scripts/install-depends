#!/bin/sh

apk add docker
apk add --no-cache python3 py3-pip
apk add curl

curl --version

curl -sSL https://raw.githubusercontent.com/python-poetry/poetry/master/get-poetry.py | python3

source $HOME/.poetry/env

poetry env info

poetry config settings.virtualenvs.create false

poetry install

poetry env info

python3 main.py